# {{ ansible_managed }}
output {
  elasticsearch {
    hosts => {{ logstash_elasticsearch_hosts | to_json }}
    index => "%{[@metadata][beat]}-%{+YYYY.MM.dd}"

    {% if not logstash_ssl_authorities_force_peer %}
    user => {{ elasticsearch_logstash_user_name }}
    password => {{ elasticsearch_logstash_user_password }}
    {% endif %}

    {% if logstash_ssl_authorities_enable %}
    ssl => true
    cacert => "{{ logstash_ssl_dest_dir }}/{{ logstash_ssl_authorities_certificate_file | basename }}"
    {% endif %}
  }
}